<?php// FTP connection details for source server$source_ftp_host = 'source_ftp_server';$source_ftp_user = 'source_ftp_user';$source_ftp_pass = 'source_ftp_password';$source_file_path = '/path/to/source/file.txt';// FTP connection details for destination server$dest_ftp_host = 'destination_ftp_server';$dest_ftp_user = 'destination_ftp_user';$dest_ftp_pass = 'destination_ftp_password';$dest_file_path = '/path/to/destination/file.txt';// Local file path to temporarily store the file from source FTP$temp_file_path = 'C:/Users/my-pc/Desktop/temp_file.txt';// Connect to source FTP server$source_ftp_conn = ftp_connect($source_ftp_host) or die("Could not connect to $source_ftp_host");ftp_login($source_ftp_conn, $source_ftp_user, $source_ftp_pass) or die("Could not login to $source_ftp_host");// Download the file from the source FTP serverftp_get($source_ftp_conn, $temp_file_path, $source_file_path, FTP_BINARY) or die("Failed to download file from $source_ftp_host");// Close the source FTP connectionftp_close($source_ftp_conn);// Connect to destination FTP server$dest_ftp_conn = ftp_connect($dest_ftp_host) or die("Could not connect to $dest_ftp_host");ftp_login($dest_ftp_conn, $dest_ftp_user, $dest_ftp_pass) or die("Could not login to $dest_ftp_host");// Upload the file to the destination FTP serverftp_put($dest_ftp_conn, $dest_file_path, $temp_file_path, FTP_BINARY) or die("Failed to upload file to $dest_ftp_host");// Close the destination FTP connectionftp_close($dest_ftp_conn);// Now that the file is on the destination FTP, proceed with your original code to process it// Database connection$servername = "localhost";$username = "root";$password = "";$dbname = "sku";$conn = new mysqli($servername, $username, $password, $dbname);// Check connectionif ($conn->connect_error) {    die("Connection failed: " . $conn->connect_error);}// File path (file is now on destination FTP server)$filePath = "C:/Users/my-pc/Desktop/temp_file.txt";  // You can change this path to wherever the file is saved locally// Check if file existsif (!file_exists($filePath)) {    die("File not found at: $filePath");}// Read file content$fileContent = file($filePath, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);foreach ($fileContent as $line) {    // Split the line by the ';' separator    $fields = explode(';', $line);    $sku = trim($fields[0]);    $inventory = isset($fields[1]) && trim($fields[1]) !== '' ? (int) trim($fields[1]) : null;    $model = isset($fields[2]) && trim($fields[2]) !== '' ? trim($fields[2]) : null;    // Check if SKU exists in the database    $checkQuery = "SELECT id FROM skus WHERE sku = ?";    $stmt = $conn->prepare($checkQuery);    $stmt->bind_param("s", $sku);    $stmt->execute();    $result = $stmt->get_result();    if ($result->num_rows > 0) {        // Update inventory and model if SKU exists        $updateQuery = "UPDATE skus SET inventory = ?, extra_info = ? WHERE sku = ?";        $updateStmt = $conn->prepare($updateQuery);        $updateStmt->bind_param("iss", $inventory, $model, $sku);        $updateStmt->execute();    } else {        // Insert new entry if SKU doesn't exist        $insertQuery = "INSERT INTO skus (sku, inventory, extra_info) VALUES (?, ?, ?)";        $insertStmt = $conn->prepare($insertQuery);        $insertStmt->bind_param("sis", $sku, $inventory, $model);        $insertStmt->execute();    }	}// Close the connection$conn->close();echo "File processed successfully!";?>