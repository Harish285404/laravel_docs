$maxRetries = 3;  // Maximum number of retries$attempt = 0;$response = null;do {    $response = $this->CurlRequest('https://api.sandbox.viator.com/partner/reviews/product', $reviewPayload);    $attempt++;    // Check if the response returned a 500 status code    if (isset($response['status']) && $response['status'] != 500) {        break;  // Successful response, exit the loop    }    // Optional: Wait before retrying (e.g., 2 seconds)    sleep(2);} while ($attempt < $maxRetries);$reviewResponses = $response;